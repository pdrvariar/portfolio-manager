# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

APP_NAME="Portfolio Manager"
APP_ENV=development  # development, testing, production
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE="America/Sao_Paulo"
APP_LOCALE="pt_BR"

# Secret key for sessions and encryption
APP_KEY=base64:your-secret-key-here-minimum-32-characters

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=portfolio_db
DB_USERNAME=portfolio_user
DB_PASSWORD=portfolio_pass
DB_ROOT_PASSWORD=root_password_here
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@portfolio-manager.com
MAIL_FROM_NAME="Portfolio Manager"

# For testing (no email sending)
MAIL_TEST_RECIPIENT=test@example.com

# ============================================================================
# FILE UPLOADS
# ============================================================================

UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_EXTENSIONS=csv,txt,xlsx,xls
UPLOAD_PATH=uploads

# ============================================================================
# SESSION & CACHE
# ============================================================================

SESSION_DRIVER=file  # file, database, redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=false  # Set to true in production with HTTPS

CACHE_DRIVER=file  # file, database, redis
CACHE_PREFIX=portfolio_

# ============================================================================
# REDIS (if using)
# ============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0
REDIS_CACHE_DB=1

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

QUEUE_CONNECTION=sync  # sync, database, redis
QUEUE_RETRY_AFTER=90
QUEUE_MAX_TRIES=3

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_DECAY_MINUTES=1

# API Rate limiting
API_RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_DECAY_MINUTES=1

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key

# ============================================================================
# SIMULATION SETTINGS
# ============================================================================

SIMULATION_TIMEOUT=300  # seconds
SIMULATION_MAX_ASSETS=20
SIMULATION_MAX_HISTORY_YEARS=20
SIMULATION_DEFAULT_CAPITAL=100000
SIMULATION_MIN_CAPITAL=1000
SIMULATION_MAX_CAPITAL=1000000000

# Performance factors
SIMULATION_DEFAULT_PERFORMANCE_FACTOR=1.0
SIMULATION_MIN_PERFORMANCE_FACTOR=0.1
SIMULATION_MAX_PERFORMANCE_FACTOR=10.0

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_CHANNEL=stack
LOG_LEVEL=debug  # emergency, alert, critical, error, warning, notice, info, debug
LOG_SLACK_WEBHOOK_URL=
LOG_PAPERTRAIL_URL=
LOG_PAPERTRAIL_PORT=

# File logging
LOG_MAX_FILES=30
LOG_FILE_SIZE=10485760  # 10MB

# ============================================================================
# EXTERNAL APIs (if needed)
# ============================================================================

# Financial data APIs
ALPHA_VANTAGE_API_KEY=
YAHOO_FINANCE_ENABLED=true
COINGECKO_API_KEY=
BRAPI_API_KEY=

# Exchange rates API
EXCHANGE_RATE_API_KEY=
EXCHANGE_RATE_BASE_URL=https://api.exchangerate-api.com/v4

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================

FRONTEND_URL=http://localhost:8080
FRONTEND_ASSET_VERSION=1.0.0

# Charting library
CHART_JS_VERSION=3.9.1
PLOTLY_VERSION=2.18.0

# ============================================================================
# ADMINISTRATION
# ============================================================================

ADMIN_EMAIL=admin@portfolio-manager.com
ADMIN_PASSWORD=ChangeThisPassword123!
SUPPORT_EMAIL=support@portfolio-manager.com

# Default admin user (auto-created if doesn't exist)
DEFAULT_ADMIN_NAME="Administrator"
DEFAULT_ADMIN_EMAIL="admin@portfolio.com"
DEFAULT_ADMIN_PASSWORD="admin123"

# ============================================================================
# FEATURE FLAGS
# ============================================================================

FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_API_ACCESS=false
FEATURE_PORTFOLIO_SHARING=false
FEATURE_REAL_TIME_UPDATES=false

# ============================================================================
# INTEGRATION SETTINGS
# ============================================================================

GOOGLE_ANALYTICS_ID=
GOOGLE_RECAPTCHA_SITE_KEY=
GOOGLE_RECAPTCHA_SECRET_KEY=

# ============================================================================
# DOCKER SPECIFIC
# ============================================================================

# Container names
PHP_CONTAINER=portfolio-php
NGINX_CONTAINER=portfolio-nginx
MYSQL_CONTAINER=portfolio-mysql
REDIS_CONTAINER=portfolio-redis

# Volume names
MYSQL_VOLUME=portfolio_mysql_data
REDIS_VOLUME=portfolio_redis_data
UPLOADS_VOLUME=portfolio_uploads

# ============================================================================
# BACKUP SETTINGS
# ============================================================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

DEVELOPER_MODE=true
DEBUG_TOOLBAR=false
SHOW_ERRORS=true
CACHE_ENABLED=false
MINIFY_ASSETS=false

# ============================================================================
# TESTING SETTINGS
# ============================================================================

TEST_DATABASE=portfolio_test
TEST_USERNAME=test_user
TEST_PASSWORD=test_pass
TEST_MAIL_DRIVER=log  # log, array, or smtp