{
    "name": "portfolio/manager",
    "description": "Sistema de gerenciamento e simulação de portfólios",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-bcmath": "*",
        "phpmailer/phpmailer": "^6.6",
        "league/csv": "^9.8",
        "monolog/monolog": "^2.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "analyse": "phpstan analyse src/ --level=5",
        "check-style": "phpcs src/",
        "fix-style": "phpcbf src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}